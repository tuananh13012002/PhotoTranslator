<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewCarouselItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/title_image_intro"
        android:src="@drawable/intro1_v2"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/title_image_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_img_intro"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textStyle="bold"
        android:text="ABCBCB"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/content_img_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:text="abcbcb"
        android:textColor="@color/inactive_text_color"
        android:textSize="17sp" />
</RelativeLayout>